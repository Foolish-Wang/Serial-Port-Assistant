<Window x:Class="Serial_Port_Assistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="串口助手" Height="500" Width="900" MinWidth="700" MinHeight="400">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <!-- 左侧：串口设置 -->
        <StackPanel Grid.Column="0" VerticalAlignment="Stretch">
            <GroupBox Header="串口设置" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="端口：" Width="60" VerticalAlignment="Center"/>
                        <ComboBox Width="140" Name="PortComboBox"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="波特率：" Width="60" VerticalAlignment="Center"/>
                        <ComboBox Width="140" Name="BaudRateComboBox"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="数据位：" Width="60" VerticalAlignment="Center"/>
                        <ComboBox Width="140" Name="DataBitsComboBox"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="校验位：" Width="60" VerticalAlignment="Center"/>
                        <ComboBox Width="140" Name="ParityComboBox"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="停止位：" Width="60" VerticalAlignment="Center"/>
                        <ComboBox Width="140" Name="StopBitsComboBox"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button Name="OpenButton" Content="打开串口" Width="90" Margin="0,0,10,0"/>
                <Button Name="CloseButton" Content="关闭串口" Width="90"/>
            </StackPanel>
            <GroupBox Header="发送区">
                <StackPanel Margin="10">
                    <TextBox Name="SendTextBox" Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Name="SendButton" Content="发送" Width="80"/>
                        <CheckBox Name="HexSendCheckBox" Content="16进制发送" Margin="10,0,0,0"/>
                        <CheckBox Name="AutoSendCheckBox" Content="自动发送" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <!-- 分隔线 -->
        <Rectangle Grid.Column="1" Width="1" Fill="#DDD"/>
        <!-- 右侧：接收区 -->
        <StackPanel Grid.Column="2" VerticalAlignment="Stretch">
            <GroupBox Header="接收区" Height="Auto">
                <Grid>
                    <TextBox Name="ReceiveTextBox" Margin="10" VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Auto" AcceptsReturn="True" 
                             TextWrapping="Wrap" IsReadOnly="True"/>
                </Grid>
            </GroupBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Name="ClearButton" Content="清空" Width="80" Margin="0,0,10,0"/>
                <Button Name="SaveButton" Content="保存" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>